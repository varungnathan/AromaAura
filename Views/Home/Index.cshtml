@{
    ViewData["Title"] = "Home";
}

<!-- Hero Carousel Section -->
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Images/hero-banner1.jpg" class="d-block w-100" alt="Premium Fragrances" style="max-height: 600px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold text-white">Discover Premium Fragrances</h1>
                <p class="lead text-white">Elevate your everyday style with our signature collection.</p>
                <a href="/Shop" class="btn btn-lg btn-primary mt-3">Shop Now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/Images/hero-banner2.jpg" class="d-block w-100" alt="Exclusive Deals" style="max-height: 600px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold text-white">Exclusive Deals</h1>
                <p class="lead text-white">Shop and save with our latest offers.</p>
                <a href="/Shop" class="btn btn-lg btn-light mt-3">View Deals</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/Images/hero-banner3.jpg" class="d-block w-100" alt="New Arrivals" style="max-height: 600px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold text-white">New Arrivals</h1>
                <p class="lead text-white">Explore our latest collection of fragrances.</p>
                <a href="/Shop" class="btn btn-lg btn-warning mt-3">Discover More</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- How We Create Perfection Section -->
<div class="container my-5">
    <h2 class="text-primary fw-bold text-center mb-4">How We Create Perfection</h2>
    <div class="row text-center g-4">
        <div class="col-md-3">
            <i class="bi bi-tree fs-1 text-success"></i>
            <h5 class="fw-bold mt-3">Sourcing</h5>
            <p>We source only the finest natural ingredients from sustainable farms worldwide.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-magic fs-1 text-info"></i>
            <h5 class="fw-bold mt-3">Crafting</h5>
            <p>Our skilled artisans blend each fragrance with precision and care.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-shield-check fs-1 text-primary"></i>
            <h5 class="fw-bold mt-3">Quality</h5>
            <p>Each product undergoes rigorous testing to ensure superior quality.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-heart-fill fs-1 text-danger"></i>
            <h5 class="fw-bold mt-3">Customer Love</h5>
            <p>We craft fragrances that delight and inspire, tailored just for you.</p>
        </div>
    </div>
</div>

<!-- Featured Categories Section -->
<div class="container my-5">
    <h2 class="text-primary fw-bold text-center mb-4">Explore Our Categories</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/Images/essential-oils.jpg" class="card-img-top img-fluid" alt="Essential Oils">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Essential Oils</h5>
                    <p>Discover the finest natural oils for your wellness journey.</p>
                    <a href="/Shop?category=EssentialOils" class="btn btn-outline-primary">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/Images/diffusers.jpg" class="card-img-top img-fluid" alt="Diffusers">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Diffusers</h5>
                    <p>Enhance your space with our beautifully designed diffusers.</p>
                    <a href="/Shop?category=Diffusers" class="btn btn-outline-primary">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/Images/candles.jpg" class="card-img-top img-fluid" alt="Candles">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Candles</h5>
                    <p>Create a calming atmosphere with our handcrafted candles.</p>
                    <a href="/Shop?category=Candles" class="btn btn-outline-primary">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recommended Products Section -->
<div class="container my-5">
    <h2 class="text-primary fw-bold text-center mb-4">Recommended For You</h2>
    @await Html.PartialAsync("_RecommendedProductsPartial", ViewData["RecommendedProducts"] as IEnumerable<AromaAura.Models.Product>)
</div>

<!-- About Us Section -->
<div class="container my-5 text-center">
    <h2 class="text-primary fw-bold mb-4">About AromaAura</h2>
    <p class="lead text-muted">At AromaAura, we believe that scents have the power to elevate every moment. Our passion is to bring you the best aromatherapy experiences, crafted with love and dedication.</p>
</div>

<!-- Contact Us Section -->
<div class="container my-5">
    <h2 class="text-primary fw-bold text-center mb-4">Get in Touch</h2>
    <p class="text-muted text-center mb-4">We’d love to hear from you! Whether you have questions or feedback, feel free to reach out.</p>
    <form class="row g-3 justify-content-center">
        <div class="col-md-5">
            <input type="text" class="form-control" placeholder="Your Name" required>
        </div>
        <div class="col-md-5">
            <input type="email" class="form-control" placeholder="Your Email" required>
        </div>
        <div class="col-md-10">
            <textarea class="form-control" rows="4" placeholder="Your Message" required></textarea>
        </div>
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary w-100">Send Message</button>
        </div>
    </form>
</div>

<!-- Call-to-Action Section -->
<div class="container-fluid text-center text-white p-5" style="background-color: #343a40;">
    <h2 class="fw-bold">Stay Updated</h2>
    <p class="lead">Subscribe to our newsletter for exclusive deals and updates.</p>
    <form class="d-flex justify-content-center">
        <input type="email" class="form-control w-25 me-2" placeholder="Enter your email" />
        <button class="btn btn-primary" type="submit">Subscribe</button>
    </form>
</div>

<style>
    h1.display-4 {
        margin-top: 20px;
    }

    p.lead {
        margin: 0 auto;
        max-width: 700px;
    }

    .btn {
        padding: 12px 24px;
        font-size: 1.1em;
    }

    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .btn-outline-primary {
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }

    .bi {
        margin-bottom: 10px;
    }
</style>
